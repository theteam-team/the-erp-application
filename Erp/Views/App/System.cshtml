@model IndexViewModel

@{
    ViewBag.Title = "System Page";
}

@section Scripts
    {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/clientapp/dist/runtime.js"></script>
    <script src="~/clientapp/dist/polyfills.js"></script>
    <script src="~/clientapp/dist/styles.js"></script>
    <script src="~/clientapp/dist/vendor.js"></script>
    <script src="~/clientapp/dist/main.js"></script>
}
<div class="row">
    <div class="col-md-3">
        <nav class="navbar navbar-dark bg-dark">
            <a class="navbar-brand" href="#">
                <img src="/img/SK-A-2351.jpg" alt="Logo" style="width:40px; border-radius:50%;">
               @{ 
                   var user = await userManager.GetUserAsync(User);
                   string username = "";

                   if (user != null)
                   {
                       username = user.UserName;
                   }

                }
                <label>@username</label>
            </a>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#Menu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="Menu" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"><i class="fa fa-gear"></i> Settings </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"><i class="fa fa-snowflake-o"></i> Modules </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Logout"> <i class="fa fa-sign-out"></i> Log Out</a>
                    </li>


                </ul>
            </div> 
        </nav>
    </div>
    <div class="col-md-9">
        <app-root></app-root>
    </div>
</div>