
<!DOCTYPE html>
<html>
<head>
    @*<base href="/">*@
    <title>Erp Application : @ViewBag.Title</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header class="Header">
        <nav class="navbar navbar-dark bg-dark navbar-expand-md sticky-top">
            <h2 class="navbar-brand"><i class="fa fa-graduation-cap"></i> The team team Graduation Project</h2>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="theMenu" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Home"><i class="fa fa-home"></i>Home</a>
                    </li>
                   

                    @if (ViewBag.CurrentView == "login")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register"><i class="fa fa-gear"></i> Manage the database</a> </li>
                    }
                    else if (ViewBag.CurrentView == "register" && mcontext.Users.Any())
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login"> <i class="fa fa-sign-in"></i> Login</a> </li>
                    }
                    else if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout"> <i class="fa fa-sign-out"></i>Log Out</a> </li>
                    }

                </ul>
            </div>
        </nav>
    </header>

    <section>
        <!-- <h2 class="text-left">@ViewBag.Title</h2>-->
        @RenderBody()
    </section>
    <footer class="container">
        <div class="text-center">Copyright 2019 Phyzia llc </div>
    </footer>
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    @*<script src="~/js/index.js"></script>*@
    @RenderSection("scripts", false)
</body>
</html>