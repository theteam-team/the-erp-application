<!DOCTYPE html>
<html>
<head>
    @*<base href="/">*@
    <title>Erp Application : @ViewBag.Title</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="row">
        <div class="col-md-12">
            <nav class="navbar navbar-dark bg-dark navbar-expand-md sticky-top">
            </nav>
        </div>
        <div class="col-md-3">
            <nav class="navbar navbar-dark bg-dark">
                <a class="navbar-brand" href="#">
                    <img src="/img/SK-A-2351.jpg" alt="Logo" style="width:40px; border-radius:50%;">
                    @{
                        var user = await userManager.GetUserAsync(User);
                        string username = "";

                        if (user != null)
                        {
                            username = user.UserName;
                        }

                    }
                    <label>@username</label>
                </a>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#Menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="Menu" class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="App" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"><i class="fa fa-gear"></i> Settings </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="App" asp-action="Modules"><i class="fa fa-snowflake-o"></i> Modules</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout"> <i class="fa fa-sign-out"></i> Log Out</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="col-md-9">
            <section>
                <!-- <h2 class="text-left">@ViewBag.Title</h2>-->
                @RenderBody()
            </section>
        </div>

        <h2>Vertical Tabs</h2>
        <p>Click on the buttons inside the tabbed menu:</p>

        <div class="tab">
            <button class="tablinks" onclick="openCity(event, 'London')" id="defaultOpen">London</button>
            <button class="tablinks" onclick="openCity(event, 'Paris')">Paris</button>
            <button class="tablinks" onclick="openCity(event, 'Tokyo')">Tokyo</button>
        </div>

        <div id="London" class="tabcontent">
            <h3>London</h3>
            <p>London is the capital city of England.</p>
        </div>

        <div id="Paris" class="tabcontent">
            <h3>Paris</h3>
            <p>Paris is the capital of France.</p>
        </div>

        <div id="Tokyo" class="tabcontent">
            <h3>Tokyo</h3>
            <p>Tokyo is the capital of Japan.</p>
        </div>

    </div>        
            <footer class="container">
                <div class="text-center">Copyright 2019 Phyzia llc </div>
            </footer>
            <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
            <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/index.js"></script>
            @RenderSection("scripts", false)
</body>
</html>