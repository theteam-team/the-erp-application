<!DOCTYPE html>
<html>
<head>
    @*<base href="/">*@
    <title>Erp Application : @ViewBag.Title</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <div class="col-md-3">
            <nav class="navbar navbar-dark bg-dark">
                <a class="navbar-brand" href="#">
                    <img src="/img/SK-A-2351.jpg" alt="Logo" style="width:40px; border-radius:50%;">
                    @{
                        var user = await userManager.GetUserAsync(User);
                        string username = "";

                        if (user != null)
                        {
                            username = user.UserName;
                        }

                    }
                    <label>@username</label>
                </a>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#Menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="Menu" class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="App" asp-action="Home"><i class="fa fa-home"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"><i class="fa fa-gear"></i> Settings </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="App" asp-action="Modules"><i class="fa fa-snowflake-o"></i> Modules</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout"> <i class="fa fa-sign-out"></i> Log Out</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="col-md-9">
            <section>

                <!-- <h2 class="text-left">@ViewBag.Title</h2>-->
                @RenderBody()
            </section>
        </div>
    </div>        
            <footer class="container">
                <div class="text-center">Copyright 2019 Phyzia llc </div>
            </footer>
            <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
            <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/index.js"></script>
            @RenderSection("scripts", false)
</body>
</html>