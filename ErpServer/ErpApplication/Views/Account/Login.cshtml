@model IndexViewModel
@{
    ViewBag.Title = "Login Page";
}
@section Scripts
    {

    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    }
<div>
    <div>
        <label id="loginToggle">Log in</label>
    </div>
    <div>
        <form class="popup-form" id="signIn-form" asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="LoginModel.UserName">Username</label>
                <input type="text" asp-for="LoginModel.UserName" />
                <span asp-validation-for="LoginModel.UserName"></span>
            </div>
            <div>
                <label asp-for="LoginModel.Password">Password</label>
                <input type="password" asp-for="LoginModel.Password" />
                <span asp-validation-for="LoginModel.Password"></span>
            </div>
           @* Adds The Database Names to the Login Form *@
            @{ 
                List<string> list = new List<string>();

                @foreach (var el in mcontext.Admins)
                {
                    list.Add(el.DatabaseName);
                }
            }
            <div>
                <label asp-for="LoginModel.DatabaseName">Database</label>
                <select asp-for="LoginModel.DatabaseName" asp-items="@(new SelectList(list))">
                    <option value="">Please choose a value</option>
                </select>
                <span asp-validation-for="LoginModel.DatabaseName"></span>
            </div>
            <div>
                <label>Remember Me?</label>
                <input type="checkbox" />
            </div>
            <div>
                <input type="submit" value="Login" />
            </div>
        </form>
    </div>
</div>

